{
  "extends": ["@tsconfig/node-lts", "@tsconfig/strictest"],
  "compilerOptions": {
    // ESM
    "module": "NodeNext",
    "moduleResolution": "NodeNext",

    // Enforce explicit type imports/exports
    "verbatimModuleSyntax": true,

    // Compile each file independently
    "isolatedModules": true,

    // Ensure imports casing matches files casing on disk
    "forceConsistentCasingInFileNames": true,

    // Library output
    "outDir": "./dist",
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true
  },
  "include": ["src/mod.ts"]
}
